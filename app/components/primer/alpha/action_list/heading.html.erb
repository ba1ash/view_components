<%= render(Primer::BaseComponent.new(tag: :div, **@system_arguments)) do %>
  <%= render(Primer::BaseComponent.new(tag: @tag, classes: class_names("ActionList-sectionDivider-title"), id: title_id)) do %>
    <%= @title %>
  <% end %>
  <%= render Primer::ConditionalWrapper.new(condition: subtitle?, tag: :span, classes: class_names("ActionListItem-description"), id: subtitle_id) do %>
    <%= @subtitle %>
  <% end %>
<% end %>
